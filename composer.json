{
    "name": "laravel/scanner",
    "description": "An application for scanning files and updating translations.",
    "keywords": ["php", "scanner", "translations"],
    "homepage": "https://laravel.com",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/laravel/scanner/issues",
        "source": "https://github.com/laravel/scanner"
    },
    "authors": [
        {
            "name": "Jo√£o Pedro Lopes",
            "email": "joaopalopes24@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "illuminate/view": "^11.45",
        "larastan/larastan": "^3.6",
        "laravel-zero/framework": "^11.45",
        "laravel/pint": "^1.24",
        "mockery/mockery": "^1.6",
        "nunomaduro/termwind": "^2.3",
        "pestphp/pest": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/scanner"]
}
